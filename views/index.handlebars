<div id="top-container" class="container-fluid">
  <h1 id="main-title" class="text-center">
    Encontre o veículo dos seus sonhos
  </h1>
  <p id="main-subtitle" class="text-center">
    Somos a loja com mais alto padrão em veículos no mercado, direcionadas a
    pessoas exigentes
  </p>
  <form id="search-form" class="form-inline" action="/" method="GET">
    <div class="form-group col-md-10">
      <input
        type="text"
        class="form-control"
        id="shopCar"
        name="shopCar"
        placeholder="Digite o veículo que está buscando"
      />
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-primary">Procurar</button>
    </div>
  </form>
</div>

<main>
  <div id="shopCars-container" class="container">
    <div class="row">
      <div class="col-md-12">
        {{#if search}}
        <h2 id="car-list-title">Buscando... {{search}}</h2>
        {{else}}
        <h2 id="car-list-title">Veja os destaque</h2>
        {{/if}}
        <ul id="car-list" class="list-group">
          {{#each shopCars}}
          <li class="list-group-item {{#if dataValues.new_car}} new-car {{/if}}" >
            <img src="/img/car.svg" alt="Car" />
            <div class="car-details">
              <h3>{{dataValues.titulo}}</h3>
              <div class="car-info-row">
                <p>Marca: <span>{{dataValues.marca}}</span></p>
                <p>Modelo: <span>{{dataValues.modelo}}</span></p>
              </div>
              <div class="car-info-row">
                <p>Ano: <span>{{dataValues.ano}}</span></p>
                <p>Cor: <span>{{dataValues.cor}}</span></p>
              </div>
              <p>Descrição: <span>{{dataValues.caracteristica}}</span></p>
              <h3>Valor: <span>{{dataValues.valor}}</span></h3>
            </div>
            <span class="new-car-label">New</span>
            <a class="btn btn-primary">Apreciar</a>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</main>